<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BMealNoticeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_bmeal_notice_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_empty"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/fragment_bmeal_notice_post_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/size_25"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_bmeal_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_loading"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_18"/>

            <TextView
                android:id="@+id/fragment_bmeal_notice_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:text="@string/text_loading"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/text_16"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>